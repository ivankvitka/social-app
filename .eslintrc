{
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended",
    "standard",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "jsx-a11y",
    "prettier",
    "better-styled-components"
  ],
  "rules": {
    "semi": [2, "always"],
    "no-restricted-imports": [
      "error",
      {
        "paths": [{
          "name": "styled-components",
          "message": "Please import from styled-components/macro."
        }],
        "patterns": [
          "!styled-components/macro"
        ]
      }
    ]
  }
}